<?xml version="1.0" encoding="utf-8"?>


<!-- T2 - Connect Arduino Controlled Paintbrush -->
<launch>

    <!-- Set Arduino Port -->
    <arg name="port" default="/dev/ttyACM1" />

    <!-- Launch Arduino Connection -->
    <node pkg="rosserial_python" type="serial_node.py" name="serial_node" respawn="true" >
        <param name="port" value="$(arg port)" />
        <param name="baud" value="500000" /> <!-- Baud must match hardcoded value on Arduino -->
    </node>
</launch>
